{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",         // <--- TS input from src/
    "outDir": "public/dist",  // <--- JS output to public/dist/
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
